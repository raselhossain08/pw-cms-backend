  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "seed": "ts-node -r tsconfig-paths/register src/seed/seed.ts",
    "migrate:atlas": "ts-node -r tsconfig-paths/register src/scripts/migrate-to-atlas.ts",
    "migrate:files": "ts-node -r tsconfig-paths/register src/scripts/migrate-files.ts",
    "migrate:urls": "ts-node -r tsconfig-paths/register src/scripts/migrate-urls-to-full-urls.ts",
    "backup:restore": "ts-node -r tsconfig-paths/register src/scripts/backup-restore.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
